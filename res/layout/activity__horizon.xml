<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffff">
    
   <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
    <!-- 第一段 -->>
	<ImageView
        android:id="@+id/first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/a4" />
	
	 <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="消防/景观绿化"
        android:textColor="#ffffff"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/zzzz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="主体施工阶段"
        android:textColor="#000000"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zzzz"
        android:layout_marginTop="15dp"
        android:src="@drawable/b5" />

    <TextView
        android:id="@+id/xxxx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zzzz"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="35dp"
        android:text="出图阶段"
        android:textColor="#8c8c8c" />
    
    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zzzz"
		android:layout_toRightOf="@+id/vvvv"        
        android:layout_marginTop="35dp"
        android:layout_marginLeft="8dp"
        android:src="@drawable/d2" />
    
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zzzz"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/w6" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first"
        android:layout_marginRight="5dp"
        android:layout_marginTop="22dp"
        android:layout_toLeftOf="@+id/zzzz"
        android:src="@drawable/r1" />

    <TextView
        android:id="@+id/jump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/zzzz"
        android:text="阶段选择"
        android:textColor="#2c75e4"
        android:textSize="16sp" />
	
	
        
         <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignLeft="@+id/imageView1"
        android:src="@drawable/d7"
        android:layout_marginLeft="20dp" />
    
	<!-- 第二段 -->
	
	<ImageView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/b1"
	    android:id="@+id/er"
	    android:layout_marginTop="11dp"
	    android:layout_below="@+id/xxxx"
	    />
	
	<GridView
              android:id="@+id/gridView1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignBottom="@+id/one"
              android:layout_below="@+id/imageView2"
              android:numColumns="4"
              android:verticalSpacing="15dp" >
       
    </GridView>
	
	
	   <!-- 第三段 -->
       
        <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/practical"
           android:text="实际开工时间:"
         android:textColor="#afafaf"
           android:textSize="16sp"
           android:layout_below="@+id/er"
           android:layout_marginLeft="28dp"
           android:layout_marginTop="10dp"/>
       
        <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text=""
           android:textColor="#000000"
           android:id="@+id/show"
           android:textSize="16sp"
           android:layout_below="@+id/er"
           android:layout_marginLeft="5dp"
           android:layout_toRightOf="@+id/practical"
           android:layout_marginTop="10dp"/>
       
       
       
       <ImageView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/b4"
         android:id="@+id/q10"
         android:layout_below="@+id/practical"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="8dp"/>
	
	  <!-- 第四段 -->
       
       <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/company"
           android:text="施工总承包"
           android:textColor="#2c75e4"
           android:textSize="16sp"
           android:layout_below="@+id/q10"
           android:layout_marginLeft="28dp"
           android:layout_marginTop="17dp"/>
       
       <ImageView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/choose"
           android:src="@drawable/d5"
           android:layout_below="@+id/q10"
           android:layout_marginLeft="109dp"
           android:layout_marginTop="17dp"/>
       
           <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameone"
        android:text=""
        android:textSize="16sp"
        android:textColor="#000000"
          android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/choose"
        android:layout_below="@+id/q10"/>
          
             <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nametwo"
        android:text=""
        android:textSize="16sp"
        android:textColor="#000000"
          android:layout_marginLeft="79dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/choose"
        android:layout_below="@+id/q10"/>
             
                <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/namethree"
        android:text=""
        android:textSize="16sp"
        android:textColor="#000000"
          android:layout_marginLeft="155dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/choose"
        android:layout_below="@+id/q10"/>
       
       <ImageView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/b4"
         android:id="@+id/q4"
         android:layout_below="@+id/choose"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="9dp"/>

       <TextView
           android:id="@+id/vvvv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignLeft="@+id/jump"
           android:layout_alignTop="@+id/imageView12"
           android:text="桩基基坑"
           android:textColor="#8c8c8c" />

       <ImageView
           android:id="@+id/imageView3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignTop="@+id/textview"
           android:layout_toLeftOf="@+id/imageView12"
           android:src="@drawable/d4" />

         </RelativeLayout>
</ScrollView>