<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a1"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/aaa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:src="@drawable/a5" />

    <EditText
        android:id="@+id/mobliphone"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:hint="请填写手机号"
         android:inputType="number"
        android:textColor="#000000"
        android:textSize="12sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aaa"
        android:layout_centerHorizontal="true"
        android:src="@drawable/a5" />

    <ImageView
        android:layout_width="240dp"
        android:layout_height="1dp"
        android:layout_below="@+id/aaa"
        android:layout_centerHorizontal="true"
        android:src="#d3d3d3" />

    <EditText
        android:id="@+id/testing"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_below="@+id/mobliphone"
        android:layout_marginLeft="60dp"
        android:hint="请输入验证码"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/obtain"
        android:layout_toRightOf="@+id/testing"
        android:text="获取验证码"
        android:textColor="#0000ff"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/aaaa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/testing"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/a5" />

    <EditText
        android:id="@+id/password"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_below="@+id/testing"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="请输入密码"
         android:inputType="number"
        android:textColor="#000000"
        android:textSize="12sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aaaa"
        android:layout_centerHorizontal="true"
        android:src="@drawable/a5" />

    <ImageView
        android:layout_width="240dp"
        android:layout_height="1dp"
        android:layout_below="@+id/aaaa"
        android:layout_centerHorizontal="true"
        android:src="#d3d3d3" />

    <EditText
        android:id="@+id/repeat"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:hint="请再次输入密码"
        android:inputType="number"
        android:textColor="#000000"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@+id/repeat"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:src="#0000ff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/repeat"
        android:layout_marginLeft="83dp"
        android:layout_marginTop="35dp"
        android:text="注     册"
        android:textColor="#fffff0"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/imageview1"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@+id/repeat"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="30dp"
        android:src="#fffff0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/repeat"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="35dp"
        android:text="取      消"
        android:textColor="#0000ff"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/obtain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignTop="@+id/testing"
        android:layout_marginLeft="10dp"
        android:src="@drawable/b11" />

</RelativeLayout>